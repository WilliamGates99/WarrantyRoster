<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WarrantyRoster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/navyBlue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/navyBlue</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.WarrantyRoster.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/ic_logo_xeniac
        </item>
        <item name="postSplashScreenTheme">@style/Theme.WarrantyRoster.Landing</item>
    </style>

    <style name="Theme.WarrantyRoster.Landing" parent="Theme.WarrantyRoster">
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grayLight</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/color_stroke_input</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/Theme.WarrantyRoster.TextInputLayout.Error</item>
        <item name="helperTextTextAppearance">@style/Theme.WarrantyRoster.TextInputLayout.Helper
        </item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout.Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout.Helper" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WarrantyRoster.LoadingProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="hideAnimationBehavior">inward</item>
        <item name="indicatorColor">@android:color/white</item>
        <item name="showAnimationBehavior">outward</item>
        <item name="trackCornerRadius">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.Button.Appearance</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.WarrantyRoster.Button.Appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.TextButton.Appearance</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextButton.Appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.WarrantyRoster.BottomNavigationView.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WarrantyRoster.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Theme.WarrantyRoster.Toolbar.Title</item>
        <item name="android:background">@color/background</item>
        <item name="android:elevation">1dp</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Theme.WarrantyRoster.Toolbar.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.WarrantyRoster.ImageViewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

</resources>