<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WarrantyRoster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/navyBlue</item>
        <item name="colorOnPrimary">@color/whiteConstant</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/navyBlue</item>
        <item name="colorOnSecondary">@color/whiteConstant</item>
        <item name="android:statusBarColor">@color/statusBarV21</item>
        <item name="android:colorEdgeEffect">@color/skyBlue</item>
        <item name="snackbarStyle">@style/Theme.WarrantyRoster.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Theme.WarrantyRoster.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/Theme.WarrantyRoster.Snackbar.ActionButton</item>
        <item name="materialAlertDialogTheme">@style/Theme.WarrantyRoster.AlertDialog</item>
    </style>

    <style name="Theme.WarrantyRoster.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/ic_logo_xeniac
        </item>
        <item name="postSplashScreenTheme">@style/Theme.WarrantyRoster.Landing</item>
    </style>

    <style name="Theme.WarrantyRoster.Landing" parent="Theme.WarrantyRoster">
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>

    <style name="Theme.WarrantyRoster.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/red</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="Theme.WarrantyRoster.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="Theme.WarrantyRoster.Snackbar.ActionButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grayLight</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/color_stroke_input</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/Theme.WarrantyRoster.TextInputLayout.Error</item>
        <item name="helperTextTextAppearance">@style/Theme.WarrantyRoster.TextInputLayout.Helper
        </item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grayLight</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/color_stroke_input</item>
        <item name="boxStrokeErrorColor">@color/red</item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout.Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout.Helper" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WarrantyRoster.LoadingProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/grayMedium</item>
        <item name="trackCornerRadius">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.LoadingProgressBar.TextButton" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/grayMedium</item>
        <item name="trackCornerRadius">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.LoadingProgressBar.Button" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/whiteConstant</item>
        <item name="trackCornerRadius">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.LoadingProgressBar.Toolbar" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/black</item>
        <item name="trackCornerRadius">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.LoadingProgressBar.Verification" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/navyBlue</item>
        <item name="trackCornerRadius">12dp</item>
        <item name="trackThickness">2dp</item>
    </style>

    <style name="Theme.WarrantyRoster.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.Button.Appearance</item>
        <item name="android:textColor">@color/whiteConstant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.WarrantyRoster.Button.Settings" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.Button.Appearance</item>
        <item name="backgroundTint">@color/red10</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.WarrantyRoster.Button.Appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.TextButton.Appearance</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextButton.Settings" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.TextButton.Appearance</item>
        <item name="backgroundTint">@color/blue20</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextButton.Appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.WarrantyRoster.BottomNavigationView.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.WarrantyRoster.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Theme.WarrantyRoster.Toolbar.Title</item>
        <item name="android:background">@color/surface</item>
        <item name="android:elevation">3dp</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Theme.WarrantyRoster.Toolbar.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.WarrantyRoster.ImageViewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.ImageViewShapeAppearance.Settings">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Theme.WarrantyRoster.AlertDialog.Style</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/Theme.WarrantyRoster.AlertDialog.Title
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/Theme.WarrantyRoster.AlertDialog.Body
        </item>
        <item name="android:checkedTextViewStyle">@style/Theme.WarrantyRoster.AlertDialog.Choice
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Theme.WarrantyRoster.AlertDialog.PositiveButton
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Theme.WarrantyRoster.AlertDialog.NegativeButton
        </item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog.Style" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.AlertDialog.Appearance</item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog.Appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog.Choice" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.TextButton.Appearance</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Theme.WarrantyRoster.AlertDialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.TextButton.Appearance</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>