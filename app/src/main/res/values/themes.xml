<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WarrantyRoster" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.WarrantyRoster.Landing" parent="Theme.WarrantyRoster">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.WarrantyRoster.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grayLight</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/color_stroke_input</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!--    <style name="Theme.WarrantyRoster.TextInputLayout.Error" parent="Widget.MaterialComponents.TextView">-->
    <!--        <item name="android:fontFamily">@font/nunito_semi_bold</item>-->
    <!--        <item name="android:textSize">12sp</item>-->
    <!--        <item name="android:letterSpacing">-0.06</item>-->
    <!--        <item name="android:layout_marginTop">3dp</item>-->
    <!--    </style>-->

    <style name="Theme.WarrantyRoster.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.Button.Appearance</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.WarrantyRoster.Button.Appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/Theme.WarrantyRoster.TextButton.Appearance</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Theme.WarrantyRoster.TextButton.Appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

</resources>