<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WarrantyRoster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/navyBlue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/navyBlue</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="snackbarStyle">@style/Theme.WarrantyRoster.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Theme.WarrantyRoster.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/Theme.WarrantyRoster.Snackbar.ActionButton</item>
    </style>

    <style name="Theme.WarrantyRoster.Landing" parent="Theme.WarrantyRoster">
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

</resources>