<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_warranty"
        style="@style/Theme.WarrantyRoster.Toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetEnd="12dp"
        app:contentInsetStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_add_warranty"
        app:navigationIcon="@drawable/ic_menu_back"
        app:title="@string/add_warranty_text_title" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_add_warranty">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_add_warranty_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_title"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_title"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_title"
                        style="@style/Theme.WarrantyRoster.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_title">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ti_add_warranty_edit_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_title"
                            android:imeOptions="actionDone"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_category"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_category"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ti_add_warranty_layout_title" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_category"
                        style="@style/Theme.WarrantyRoster.TextInputLayout.Dropdown"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_add_warranty_icon_category"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_category">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/ti_add_warranty_dd_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_category"
                            android:imeOptions="actionNext"
                            android:inputType="none"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_add_warranty_icon_category"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/grayLight"
                        android:elevation="8dp"
                        android:src="@drawable/ic_category_miscellaneous"
                        app:contentPadding="12dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ti_add_warranty_layout_category"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ti_add_warranty_layout_category"
                        app:shapeAppearance="@style/Theme.WarrantyRoster.ImageViewShapeAppearance" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_add_warranty_device"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_add_warranty_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_brand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_brand"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_brand"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_brand"
                        style="@style/Theme.WarrantyRoster.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_brand">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ti_add_warranty_edit_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_brand"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_model"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_model"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_model"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ti_add_warranty_layout_brand" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_model"
                        style="@style/Theme.WarrantyRoster.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_model">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ti_add_warranty_edit_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_model"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_serial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_serial"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_serial"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ti_add_warranty_layout_model" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_serial"
                        style="@style/Theme.WarrantyRoster.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_serial">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ti_add_warranty_edit_serial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_serial"
                            android:imeOptions="actionDone"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_add_warranty_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_add_warranty_device">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_date_starting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_date_starting"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_date_starting"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/ti_add_warranty_layout_date_starting"
                        app:layout_constraintStart_toStartOf="@+id/ti_add_warranty_layout_date_starting"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_date_starting"
                        style="@style/Theme.WarrantyRoster.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/ti_add_warranty_layout_date_expiry"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_date_starting">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ti_add_warranty_edit_date_starting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_date"
                            android:imeOptions="actionNext"
                            android:inputType="none"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_date_expiry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_date_expiry"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_date_expiry"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/ti_add_warranty_layout_date_expiry"
                        app:layout_constraintStart_toStartOf="@+id/ti_add_warranty_layout_date_expiry"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_date_expiry"
                        style="@style/Theme.WarrantyRoster.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/ti_add_warranty_layout_date_starting"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_date_expiry">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ti_add_warranty_edit_date_expiry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_date"
                            android:imeOptions="actionNext"
                            android:inputType="none"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_date_error"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:gravity="center_vertical|start"
                        android:text="@string/add_warranty_error_date"
                        android:textAlignment="gravity"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ti_add_warranty_layout_date_starting" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_add_warranty_title_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical|start"
                        android:labelFor="@+id/ti_add_warranty_layout_description"
                        android:maxLines="1"
                        android:text="@string/add_warranty_title_description"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_date_error" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_add_warranty_layout_description"
                        style="@style/Theme.WarrantyRoster.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_add_warranty_title_description">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ti_add_warranty_edit_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_warranty_hint_description"
                            android:imeOptions="actionDone"
                            android:inputType="textCapSentences|textMultiLine"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grayDark"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/cpi_add_warranty"
        style="@style/Theme.WarrantyRoster.LoadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_add_warranty" />

</androidx.constraintlayout.widget.ConstraintLayout>