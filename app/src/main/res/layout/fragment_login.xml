<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:paddingTop="@dimen/padding_12dp"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- MARGIN_TOP: 12 + 32 = 44DP -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_32dp"
            android:fontFamily="@font/localized_extra_bold"
            android:gravity="start|center_vertical"
            android:text="@string/login_text_description"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_title_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_email"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_32dp"
            android:layout_marginTop="@dimen/margin_44dp"
            android:fontFamily="@font/localized_bold"
            android:gravity="start|center_vertical"
            android:labelFor="@+id/ti_layout_email"
            android:maxLines="1"
            android:text="@string/login_title_email"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintBottom_toTopOf="@+id/ti_layout_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_layout_email"
            style="@style/Theme.WarrantyRoster.TextInputLayout"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_4dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_title_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ti_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/localized_regular"
                android:gravity="center_vertical"
                android:hint="@string/login_hint_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="@color/grayDark"
                android:textSize="@dimen/text_size_16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_password"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_32dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:fontFamily="@font/localized_bold"
            android:gravity="start|center_vertical"
            android:labelFor="@+id/ti_layout_password"
            android:maxLines="1"
            android:text="@string/login_title_password"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintBottom_toTopOf="@+id/ti_layout_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_layout_email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_layout_password"
            style="@style/Theme.WarrantyRoster.TextInputLayout"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_4dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_forgot_pw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ti_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/localized_regular"
                android:hint="@string/login_hint_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColorHint="@color/grayDark"
                android:textSize="@dimen/text_size_16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- MARGIN_TOP: 3 + 5 = 8DP -->
        <!-- MARGIN_HORIZONTAL: 27 + 5 = 32DP -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_forgot_pw"
            style="@style/Theme.WarrantyRoster.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_27dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:fontFamily="@font/localized_light"
            android:gravity="center"
            android:text="@string/login_btn_forgot_pw"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_layout_password" />

        <!-- MARGIN_TOP: 35 + 5 = 40DP -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            style="@style/Theme.WarrantyRoster.Button"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_35dp"
            android:text="@string/login_btn_login"
            app:layout_constraintBottom_toTopOf="@id/tv_other_methods"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_forgot_pw" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/cpi_login"
            style="@style/Theme.WarrantyRoster.LoadingProgressBar.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/btn_login"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toTopOf="@+id/btn_login" />

        <View
            android:id="@+id/divider_other_methods_start"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="@dimen/height_1dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:background="@color/grayMedium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_other_methods"
            app:layout_constraintEnd_toStartOf="@+id/tv_other_methods"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_other_methods"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_other_methods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_18dp"
            android:fontFamily="@font/localized_light"
            android:maxLines="1"
            android:text="@string/login_text_other_methods"
            android:textAlignment="center"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/btn_google"
            app:layout_constraintEnd_toStartOf="@+id/divider_other_methods_end"
            app:layout_constraintStart_toEndOf="@+id/divider_other_methods_start"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <View
            android:id="@+id/divider_other_methods_end"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="@dimen/height_1dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:background="@color/grayMedium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_other_methods"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_other_methods"
            app:layout_constraintTop_toTopOf="@+id/tv_other_methods"
            app:layout_constraintVertical_bias="0.5" />

        <!-- MARGIN_BOTTOM: 19 + 5 = 24DP -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_google"
            style="@style/Theme.WarrantyRoster.Button.Outlined"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_18dp"
            android:layout_marginBottom="@dimen/margin_19dp"
            app:icon="@drawable/ic_auth_google"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/padding_0dp"
            app:iconSize="@dimen/width_32dp"
            app:iconTint="@color/whiteStatic"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/btn_register"
            app:layout_constraintEnd_toStartOf="@+id/btn_twitter"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_other_methods" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_twitter"
            style="@style/Theme.WarrantyRoster.Button.Outlined"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            app:icon="@drawable/ic_auth_twitter"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/padding_0dp"
            app:iconSize="@dimen/width_32dp"
            app:iconTint="@color/whiteStatic"
            app:iconTintMode="multiply"
            app:layout_constraintBaseline_toBaselineOf="@id/btn_google"
            app:layout_constraintEnd_toStartOf="@id/btn_facebook"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/btn_google" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_facebook"
            style="@style/Theme.WarrantyRoster.Button.Outlined"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_24dp"
            app:icon="@drawable/ic_auth_facebook"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/padding_0dp"
            app:iconSize="@dimen/width_32dp"
            app:iconTint="@color/whiteStatic"
            app:iconTintMode="multiply"
            app:layout_constraintBaseline_toBaselineOf="@id/btn_google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btn_twitter" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4dp"
            android:fontFamily="@font/localized_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/login_text_register_title"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_register"
            app:layout_constraintEnd_toStartOf="@+id/btn_register"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- MARGIN_BOTTOM: 19 + 5 = 24DP -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            style="@style/Theme.WarrantyRoster.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_4dp"
            android:layout_marginBottom="@dimen/margin_19dp"
            android:gravity="center"
            android:text="@string/login_btn_register"
            android:textAlignment="gravity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_register_title"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>