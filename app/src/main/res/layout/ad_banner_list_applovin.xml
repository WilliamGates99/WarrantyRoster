<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_banner_list_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/grayLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/Theme.WarrantyRoster.ImageViewShapeAppearance" />

    <TextView
        android:id="@+id/tv_banner_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:text="Xeniac Dev"
        android:textAlignment="gravity"
        android:textColor="@color/navyBlue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_banner_list_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_banner_list_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_banner_list_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:text="We are a software production team"
        android:textAlignment="gravity"
        android:textColor="@color/grayDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_banner_list_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_banner_list_title"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_banner_list_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_ad_indicator"
        android:backgroundTint="@color/blue20"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_black"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:text="@string/warranties_list_ad_indicator"
        android:textAlignment="gravity"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>